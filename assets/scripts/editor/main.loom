component Player {
    speed: f32,
    health: i64,
}

@startup
system setup {
    spawn(Player {
        speed: 1.0,
        health: 100,
    });
}

@update
system spin {
    let time = res Time;

    let y = vec3(0.0, 1.0, 0.0);
    let delta = time.delta_seconds();
    let q = quat(y, delta);
    
    loop query _ [var t: Transform] {
        let rot = q * t.rotation();
        t.set_rotation(rot);
    }
}