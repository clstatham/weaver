@startup
system setup {
    spawn(Player {
        pos = vec3(0, 0, 0)
        vel = vec3(0, 0, 0)
    })
}

@update
system update {
    query players {
        var player: Player
    }

    let dt = 1.0 / 60.0

    loop players {
        player.vel += vec3(0, -9.81, 0) * vec3(dt, dt, dt)
        player.pos += player.vel * vec3(dt, dt, dt)
        print(player.pos)
    }
}
