@startup
system setup {
    spawn(
        Player {
            pos = vec3(0, 0, 0)
            vel = vec3(0, 0, 0)
        },
        Health {
            hp = 100
        },
    )
}

@update
system update {
    let dt = 1.0 / 60.0

    loop query _ [
        var player: Player
        let health: Health
    ] {
        player.vel += vec3(0, -9.81, 0) * vec3(dt, dt, dt)
        player.pos += player.vel * vec3(dt, dt, dt)
        print("player =", player)
    }
}
